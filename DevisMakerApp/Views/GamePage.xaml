<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DevisMakerApp.Views"
      xmlns:Game="clr-namespace:DevisMakerApp.UserControls.Game" x:Class="DevisMakerApp.Views.GamePage"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="GamePage">

    <Grid>

        <Game:Stats HorizontalAlignment="Center" VerticalAlignment="Center" Height="720" Width="1280" Visibility="{Binding StatsVisibility}"/>

        <Game:End HorizontalAlignment="Center" VerticalAlignment="Center" Height="720" Width="1280" Visibility="{Binding EndVisibility}"/>

        <Game:Game HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="{Binding GameVisibility}" Height="720" Width="1280"/>
        <Game:Menu HorizontalAlignment="Center" VerticalAlignment="Center" Width="1280" Height="720" Visibility="{Binding MenuVisibility}"/>

    </Grid>
</Page>
